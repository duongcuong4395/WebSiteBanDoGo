@model WebsiteBanDogo.Models.KHACHHANG

@{
    ViewBag.Title = "SuaThongTinKH";
    Layout = "~/Views/Layout/LayoutUser.cshtml"; 
}

<div class="col-md-6 col-md-offset-3">
    @using (Html.BeginForm("SuaThongTinKH", "NguoiDung", FormMethod.Post, new { @enctype = "multipart/form-data" }))
    {
        <div class="title-main">
            <h3><i class="fa fa-cubes"></i>SỬA THÔNG TIN KHÁCH HÀNG</h3>
        </div>

        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <hr />
            @Html.ValidationSummary(true)
            @Html.HiddenFor(model => model.MaKhachHang)
            
                <div class="main-ct table-responsive">
                    <table class="table table-striped table-hover table-bordered">
                        <tr>
                            <th>
                                Tên khách hàng:  
                            </th>
                            <td>
                                <input type="text" class="form-control" name="TENKH" value="@Model.TenKhachHang" maxlength="50" required />
                                @Html.ValidationMessageFor(model => model.TenKhachHang)
                            </td>
                        </tr> 
                        <tr>
                            <th>
                                Tên tài khoản:   
                            </th>
                            <td>
                                <input type="text" class="form-control" name="TENTAIKHOAN" value="@Model.TaiKhoan" maxlength="20" oninput="VietKhongDau(this)" required hidden />
                                @Html.ValidationMessageFor(model => model.TaiKhoan)
                            </td>
                        </tr> 
                        <tr>
                            <th>
                                Mật khẩu:
                            </th>
                            <td>
                                <input type="password" class="form-control" name="MATKHAU" value="@Model.MatKhau" maxlength="30" required />
                                @Html.ValidationMessageFor(model => model.MatKhau)
                            </td>
                        </tr> 
                        <tr>
                            <th>
                                Email:
                            </th>
                            <td>
                                <input type="email" class="form-control" name="EMAIL" value="@Model.Email" maxlength="100" required />
                                @Html.ValidationMessageFor(model => model.Email)
                            </td>
                        </tr> 
                        <tr>
                            <th>
                                Địa chỉ:
                            </th>
                            <td>
                                <input type="text" class="form-control" name="DIACHI" value="@Model.DiaChi" maxlength="50" required />
                                @Html.ValidationMessageFor(model => model.DiaChi)
                            </td>
                        </tr> 
                        <tr>
                            <th>
                                Số điện thoại: 
                            </th>
                            <td> 
                                <input type="text" class="form-control" name="SODT" value="@Model.SoDienThoai" onkeypress='return isNumberKey(event)' maxlength="15
                                       " min="0900000000" max="099999999999" required />
                                @Html.ValidationMessageFor(model => model.SoDienThoai)
                            </td>
                        </tr> 
                        <tr>
                            <th>
                                Số tài khoản:
                            </th>
                            <td>
                                <input type="text" class="form-control" name="SOTAIKHOAN" value="@Model.SoTaiKhoan" onkeypress='return isNumberKey(event)' maxlength="16" required />
                                @Html.ValidationMessageFor(model => model.SoTaiKhoan)
                            </td>
                        </tr> 
                        <tr>
                            <th>
                                Ngày sinh:
                            </th>
                            <td>
                                <input type="date" class="form-control" name="NGAYSINH" max="@String.Format("{0:MM/dd/yyyy}", DateTime.Now)" value="@Model.NgaySinh" required />
                                @Html.ValidationMessageFor(model => model.NgaySinh)
                            </td>
                        </tr> 
                    </table>
            </div>
            
            <div class="clear"></div>

            <div class="form-group">
                <div class="btn-submit" style="display: inline; font-size: 16pt; " >
                    <input class="btn btn-default" type="submit" value="Lưu" name="save" />
                    <input class="btn btn-default" type="reset" value="Hủy" name="cancel" />
                    <button class="btn btn-default">@Html.ActionLink("Trở lại", "Index", "DoGoStore")</button> 
                </div>
            </div>
        </div>
    }

    
</div>

