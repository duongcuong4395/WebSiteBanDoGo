@model List<WebsiteBanDogo.Models.LIENHE>


@{
    ViewBag.Title = "Liên hệ của hàng";
    Layout = "~/Views/Layout/LayoutUser.cshtml"; 
} 
@section LienHeRenderSection {
    <hr />
    <div class="container">
        <h2 style="text-align: center;">LIÊN HỆ CỬA HÀNG</h2>

        <div class="Map" style="float: right; width: 55%; padding-right:5%">
            <div id="map" style=""></div>
            <button class="btn btn-primary" onclick="timDuongDi()"><span class="glyphicon glyphicon-search" aria-hidden="true"> Tìm đường đi</span></button>
        </div>

        <div class="gopY" style="float: left; width:40%;">
            <div class="panel panel-info">
                <div class="panel-heading">Thông tin chính</div>
                <div class="panel-body"> 
                    <div class="table-responsive">
                        <table class="table">
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <th style="width: 30%">Cơ sở sản xuất:</th>
                                    <td>@item.CoSoSanXuat</td>
                                </tr>
                                <tr>
                                    <th style="width: 30%">Email:</th>
                                    <td>@item.EmailLienHe</td>
                                </tr>
                                <tr>
                                    <th style="width: 30%">Điện thoại: </th>
                                    <td>@item.DienThoai</td>
                                </tr>
                                <tr>
                                    <th style="width: 30%">Mobile: </th>
                                    <td>@item.Mobile</td>
                                </tr>
                                <tr>
                                    <th style="width: 30%">Fax: </th>
                                    <td>@item.Fax</td>
                                </tr>
                            }
                        </table>
                    </div>
                </div>
            </div>

            <div class="panel panel-info">
                <div class="panel-heading">Gửi lời góp ý của bạn ở đây.</div>
                <div class="panel-body">
                    <div table-responsive>
                        @using (Html.BeginForm())
                        {

                            <table class="table table-bordered">
                                <tr>
                                    <th>Tên người gửi</th>
                                    <td><input type="text" class="form-control" placeholder="Tên người gửi...." maxlength="50" name="TenNguoiGui" title="Không bỏ trống." required /></td>
                                </tr>
                                <tr>
                                    <th>Email: </th>
                                    <td><input type="email" class="form-control" placeholder="NguyenVanAn@gmail.com." maxlength="100" oninput="VietKhongDau(this)" name="Email" title="Không bỏ trống." required /></td>
                                </tr>
                                <tr>
                                    <th>Chủ đề góp ý: </th>
                                    <td><input type="text" class="form-control" placeholder="Tên chủ đề...." maxlength="100" name="ChuDe" title="Không bỏ trống." required /></td>
                                </tr>
                                <tr>
                                    <th>Nội dung: </th>
                                    <td>
                                        <textarea class="form-control" name="NoiDung" rows="5" required></textarea>
                                    </td>
                                </tr> 
                            </table>
                            <button type="submit" class="btn btn-primary" style="float: right; width: auto; height: auto;"><span class="glyphicon glyphicon-send" aria-hidden="true"> Gửi </span></button>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
}
<style>
    #map {
        width: 100%;
        height: 300px;
    }


     #loaidogo, #main {
        display: none;
    }
</style>
