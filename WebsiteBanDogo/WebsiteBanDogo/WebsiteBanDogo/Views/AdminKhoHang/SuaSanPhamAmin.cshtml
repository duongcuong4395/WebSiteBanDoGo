@model WebsiteBanDogo.Models.HANGHOA

@{
    ViewBag.Title = "SuaSanPhamAmin";
    Layout = "~/Views/Layout/LayoutAdmin.cshtml";
}

<h2>SuaSanPhamAmin</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>HANGHOA</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.MaMatHang) 

        <div class="form-group">
            @Html.LabelFor(model => model.MaLoaiHang, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("MaLoaiHang")
            </div>
        </div>

        <div class="form-group">
            <label>Tên sản phẩm:</label>
            <input name="TenSanPham" type="text" value="@Model.TenMatHang" class="form-control">
        </div>

        <div class="form-group">
            <label>Kích thước:</label>
            <input name="KichThuoc" type="text" value="@Model.KichThuoc" class="form-control">
        </div>

        <div class="form-group">
            <label>Loại gỗ:</label>
            <input name="LoaiGo" type="text" value="@Model.LoaiGo" class="form-control">
        </div>

        <div class="form-group">
            <label>Mô tả</label>
            <textarea name="MoTa" value="@Model.MoTa" rows="3" class="form-control"> 
            </textarea>
        </div>

        <div class="form-group">
            <label>hình ảnh:</label>
            <div class="col-md-10">
                <input type="file" name="fileUpload" />
                <img src="@Url.Content("/Pictures/HangHoa/" + Model.HinhAnh)" />
                @ViewBag.Thongbao
            </div>
        </div>

        <div class="form-group">
            <label>Ngày nhập:</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.NgayNhap, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.NgayNhap, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label>Link thanh toán:</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.LinkThanhToan, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.LinkThanhToan, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label>Đơn giá:</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.DonGia, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.DonGia, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label>Khuyến mãi:</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.KhuyenMai, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.KhuyenMai, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label>Bảo hành:</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.BaoHanh, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.BaoHanh, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label>Bán Chạy:</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.BanChay, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.BanChay, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label>Giá mới:</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.GiaMoi, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.GiaMoi, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
