@using PagedList.Mvc;
@using WebsiteBanDogo.Models
@model PagedList.PagedList<DONDATHANG>


@{
    ViewBag.Title = "Trang chủ";
    Layout = "~/Views/Layout/LayoutAdmin.cshtml";
}



<div class="header"> 
    <h1 class="page-title">Trang chủ Admin</h1> 
</div>
<div class="main-content">  

    <div class="panel panel-default">
        <div class="panel-heading no-collapse">
            <span class="panel-icon pull-right">
                <button type="reset" class="demo-cancel-click" rel="tooltip" title="" data-original-title="Click to refresh"><i class="fa fa-refresh"></i></button>
            </span>
            <p>ĐƠN DẶT HÀNG</p>
        </div>
        <div id="page-stats" class="panel-collapse panel-body collapse in">
            <!--Quản lý đơn đặt hàng-->

            <div class="row">
                <table class="table">
                    <thead>
                        <tr>
                            <th>STT</th>
                            <th>Ngày lập</th>
                            <th>Hình Thức Thanh Toán</th>
                            <th>Ngày giao</th>
                            <th>Tình trạng</th>
                            <th>Tình trạng giao</th>
                            <th>Người đặt</th>
                            <th>Người nhận</th>
                            <th>Địa chỉ người nhận</th>
                            <th>Số điện thoại người nhận</th>
                            <th style="width: 3.5em;">Lựa chọn</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{ int sothuthu = 0;}
                        @foreach (var item in Model)
                        {
                            sothuthu++;
                            <tr>
                                <td>@sothuthu</td>
                                <td>
                                    @String.Format("{0:dd/MM/yyyy}", item.NgayLap)
                                </td>
                                <td>
                                    @if (item.HinhThucThanhToan == true)
                                    {
                                        <p>THANH TOÁN KHI NHẬN HÀNG</p>
                                    }
                                    else
                                    {
                                        <p> TRẢ PHÍ QUA THẺ</p>
                                    }


                                </td>
                                <td>
                                    @String.Format("{0:MM/dd/yyyy}", item.NgayGiaoHang)
                                </td>
                                <td>
                                    @if (item.TinhTrangThanhToan == true)
                                    {
                                        <p>ĐÃ THU PHÍ</p>
                                    }
                                    else
                                    {
                                        <p> CHƯA THU PHÍ</p>
                                    }

                                </td>
                                <td>
                                    @if (item.TinhTrangGiao == true)
                                    {
                                        <p>ĐÃ GIAO</p>
                                    }
                                    else
                                    {
                                        <p> CHƯA GIAO</p>
                                    }

                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.KHACHHANG.TenKhachHang)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.HoTenNguoiNhan)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.DiaChiNguoiNhan)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.SoDienThoaiNguoiNhan)
                                </td>
                                <td>
                                    <a href="@Url.Action("SuaDonDatHang","AdminDonDatHang", new { @id = item.MaDonDatHang })"><i class="fa fa-pencil"></i></a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    @*@Html.Action("SPUaChuon", "AdminKhoHang", FormMethod.Get)*@

    <div class="row">
        @Html.Action("HomThu", "AdminGioiThieuLienHe", false) 
        @Html.Action("GioiThieu", "AdminGioiThieuLienHe", false)
    </div>
    
    <footer>
        <hr>

        <!-- Purchase a site license to remove this link from the footer: http://www.portnine.com/bootstrap-themes -->
