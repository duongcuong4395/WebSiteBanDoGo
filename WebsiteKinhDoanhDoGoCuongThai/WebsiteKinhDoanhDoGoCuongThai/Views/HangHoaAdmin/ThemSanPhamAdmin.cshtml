@model WebsiteKinhDoanhDoGoCuongThai.Models.HANGHOA

@{
    ViewBag.Title = "Thêm sản phẩm Admin";
    Layout = "~/Views/Layout/LayoutAdmin.cshtml";
}

<h2 style="text-align: center">THÊM SẢN PHẨM</h2>

@using (Html.BeginForm("ThemSanPham", "Admin", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true)
        <div class="form-group">
            @Html.LabelFor(model => model.MaLoaiHang, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10" style="width: 400px;">
                @Html.DropDownList("MaLoaiHang")
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.MaMatHang, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10" style="width: 400px;">
                @Html.EditorFor(model => model.MaMatHang, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.MaMatHang, "", new { @class = "text-danger" })
                @ViewData["txtMaMatHang"]
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.TenMatHang, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10" style="width: 400px;">
                @Html.EditorFor(model => model.TenMatHang, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TenMatHang, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.MoTa, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10" style="width: 400px;">
                <textarea name="Mota" maxlength="300">Mô tả sản phẩm:</textarea>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.DonGia, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10" style="width: 400px;">
                @Html.EditorFor(model => model.DonGia, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.DonGia, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.HinhAnh, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10" style="width: 400px;">
                <input type="file" name="fileUpload" />
                @*Thông báo trùng file*@
                @ViewBag.Thongbao
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.KhuyenMai, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10" style="width: 400px;">
                @Html.EditorFor(model => model.KhuyenMai, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.KhuyenMai, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.NgayNhap, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10" style="width: 400px;">
                @*@Html.EditorFor(model => model.NgayNhap, new { htmlAttributes = new { @class = "form-control" } })*@
                <input type="date" name="NgayNhap" />
                @Html.ValidationMessageFor(model => model.NgayNhap)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.KichThuoc, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10" style="width: 400px;">
                @Html.EditorFor(model => model.KichThuoc, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.KichThuoc, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.BaoHanh, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10" style="width: 400px;">
                @Html.EditorFor(model => model.BaoHanh, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.BaoHanh, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.LoaiGo, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10" style="width: 400px;">
                @Html.EditorFor(model => model.LoaiGo, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.LoaiGo, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Thêm sản phẩm" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Trỏ lại trang chủ", "Index")
</div>
