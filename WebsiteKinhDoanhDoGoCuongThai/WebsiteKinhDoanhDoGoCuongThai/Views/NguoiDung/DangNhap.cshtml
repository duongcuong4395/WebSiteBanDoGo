@using WebsiteKinhDoanhDoGoCuongThai.Models
@model LoginViewModel


@{
    ViewBag.Title = "DangNhap";
    Layout = "~/Views/Layout/LayoutUser.cshtml";
}

<div class="container" id="KhungDangnhap"> 
    <div class="row">
        <div class="col-sm-4 col-sm-offset-1">
            <div class="login-form">
                <!--login form-->
                <h2 style="text-align: center;">ĐĂNG NHẬP</h2> 
                <div style="border: 2px solid red; height: 150px;">
                    <h4 style="text-align: center;">Đăng nhập bằng tài khoản.</h4>
                    <section id="socialLoginForm">
                        @Html.Partial("_ExternalLoginsListPartial", new ExternalLoginListViewModel { ReturnUrl = ViewBag.ReturnUrl })
                    </section>
                </div>
                <div style="clear:both;"></div>
                <h4 style="color:red; text-align:center"> @ViewBag.Thongbao</h4>
                <div style="clear:both;"></div>
                <div style="border: 1px;">
                    @using (Html.BeginForm())
                    {
                        @Html.ValidationSummary(true)
                        <p>Tên Đăng nhập: <input type="text" placeholder="Tên đăng nhập...." maxlength="20" name="TenDangNhap" title="Không bỏ trống." required /><strong style="color:red;">@ViewData["txtTenDangNhap"]</strong></p>
                        <p>Mật Khẩu:      <input type="password" placeholder="Mật khẩu....." maxlength="50" name="MatKhau" title="Không bỏ trống." required /><strong style="color:red;">@ViewData["txtMatKhau"]</strong></p>
                        <button type="submit" class="btn btn-default">Đăng nhập</button>
                    }
                </div> 
            </div><!--/login form-->
        </div>
    </div>
</div>



<style>

   #slider, .left-sidebar, .recommended_items {
        display: none;
    }  

    #KhungDangnhap {
        margin-left: 10%;
        margin-top: -5%;
        float: initial;
    }
</style>
