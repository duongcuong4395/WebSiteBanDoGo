@using WebsiteKinhDoanhDoGoCuongThai.Models
@using PagedList.Mvc
@model PagedList.PagedList<LOAIHANG>

@{
    ViewBag.Title = "Loại hàng Admin";
    Layout = "~/Views/Layout/LayoutAdmin.cshtml";
}  
<h2>QUẢN LÝ LOẠI HÀNG ADMIN</h2>

<p style="text-align:center;">
    @Html.ActionLink("Thêm Loại hàng", "ThemLoaiHang", "LoaiHangAdmin")
</p>
<table class="table" style="width: 30%; margin-left: 5%; text-align:center:" border="1">
    <tr>
        <th style="width: 70px">
            MÃ LOẠI HÀNG
        </th>
        <th style="width: 200px">
            TÊN LOẠI HÀNG
        </th> 
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item. MaLoaiHang)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TenLoaiHang)
            </td> 

            <td>
                <p style="font-size:14px;">@Html.ActionLink("Sửa Loại Hàng", "SuaLoaiHang", new { id = item.MaLoaiHang })</p> 
                <p style="font-size:14px;">@Html.ActionLink("Xóa Loại hàng", "XoaLoaiHang", new { id = item.MaLoaiHang })</p>
            </td>
        </tr>
    }
</table>

@*Tạo liên kết các trang *@

Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber)/@Model.PageCount;

<div class="MenuTrang">
    @Html.PagedListPager(Model, page => Url.Action("LoaiHangAdmin", new { page = page }))
</div>


